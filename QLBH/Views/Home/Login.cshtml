@model QLBH.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-md-6">
            @using (Html.BeginForm("doLogin", "Users", new { @role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="control-label col-md-4">Tài khoản</label>
                    <div class="col-md-10">
                        <input class="form-control" name="Username" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Mật khẩu</label>
                    <div class="col-md-10">
                        <input class="form-control" name="Password" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                </div>
            }
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <div class="row">
        @*<div class="col-md-6">
                <p>
                    <a href="@Url.Action("Index", "Customers")" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Quay lại trang trước</a>
                </p>
            </div>*@
    </div>
</section>

