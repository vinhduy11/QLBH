@model QLBH.Models.Order

@{
    ViewBag.Title = "Quản lý đơn đặt hàng";
    ViewBag.CardHeader = "Thông tin đơn đặt hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var payment = "";
    var status = "";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Đơn đặt hàng số
        <small>#@Html.DisplayFor(model => model.Order_id)</small>
    </h1>
</section>

<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-globe"></i> DotNet Projects, Inc.
                <small class="pull-right">Ngày: @DateTime.Now</small>
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            From
            <address>
                <strong>Admin, Inc.</strong><br>
                Hutech University<br>
                871 Điện Biên Phủ Quận Bình Thạnh<br>
                Phone: (804) 123-5432<br>
                Email: vinhduy11@gmail.com
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            To
            <address>
                <strong>@Html.DisplayFor(model => model.Customer_name)</strong><br>
                @Html.DisplayFor(model => model.Address)
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>Đơn đặt hàng số #@Html.DisplayFor(model => model.Order_id)</b><br>
            <br>
            <b>Đặt hàng lúc:</b> @Html.DisplayFor(model => model.Date)<br>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Số lượng</th>
                        <th>Sản phẩm</th>
                        <th>Mô tả</th>
                        <th>Số tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Order_details)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.Product_name</td>
                            <td>@item.Product_description</td>
                            <td>@item.Subtotal</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- accepted payments column -->
        <div class="col-xs-6">
            <p class="lead">Các hình thức thanh toán:</p>
            <img src="~/Content/static/dist/img/credit/visa.png" alt="Visa">
            <img src="~/Content/static/dist/img/credit/mastercard.png" alt="Mastercard">
            <img src="~/Content/static/dist/img/credit/american-express.png" alt="American Express">
            <img src="~/Content/static/dist/img/credit/paypal2.png" alt="Paypal">

            <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                Nếu cần liên hệ vui lòng gọi cho chúng tôi với số <b>19001000</b>.
            </p>
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
            <p class="lead">Tổng tiền</p>

            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th style="width:50%">Giá tiền:</th>
                            <td>@Html.DisplayFor(model => model.Total)</td>
                        </tr>
                        <tr>
                            <th>Thuế (5%)</th>
                            <td>0</td>
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td>0</td>
                        </tr>
                        <tr>
                            <th>Tổng cộng:</th>
                            <td>@Html.DisplayFor(model => model.Total)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            <a href="@Url.Action("Index", "Orders")" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Quay lại trang trước</a>
        </div>
    </div>
</section>
<div class="clearfix"></div>
