@model QLBH.Models.Provider

@{
    ViewBag.Title = "Quản lý nhà cung cấp";
    ViewBag.CardHeader = "Sửa nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.CardHeader</h3>
                </div>
                <!-- /.box-header -->
                @using (Html.BeginForm("saveEditData", "Providers", new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Provider_id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Provider_name, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Provider_name, new { htmlAttributes = new { @class = "form-control", @name = "Provider_name", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Provider_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Provider_email, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Provider_email, new { htmlAttributes = new { @class = "form-control", @name = "provider_email", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Provider_email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Provider_address, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Provider_address, new { htmlAttributes = new { @class = "form-control", @name = "provider_address", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Provider_address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Provider_phone, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Provider_phone, new { htmlAttributes = new { @class = "form-control", @name = "provider_phone", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Provider_phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                }
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <div class="row">
        <div class="col-md-6">
            <p>
                <a href="@Url.Action("Index", "Providers")" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Quay lại trang trước</a>
            </p>
        </div>
    </div>
</section>
